<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:id="@+id/card"
        style="@style/CornerCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_business_24"
                android:layout_alignParentBottom="true"
                android:id="@+id/image"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="10dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Names"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:id="@+id/names"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Office Number"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/officeNum"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/id"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="email"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/email"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="contacts"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/contacts"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*******************************************"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/star"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/card">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_style"
        android:src="@drawable/ic_baseline_add_business_24"
        android:id="@+id/edtOfficeDetails"
        android:scaleType="fitStart"
        android:tooltipText="Edit OfficeDetails"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Update office Details"
        android:gravity="center"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_alignBottom="@+id/edtOfficeDetails"/>

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/helper"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:id="@+id/edtUserDetails"
        android:layout_marginTop="15dp"
        android:scaleType="fitStart"
        android:layout_below="@+id/edtOfficeDetails"
        android:background="@drawable/btn_style"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:tooltipText="Edit OfficeDetails"
  />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Update Proofile "
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:gravity="center"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:layout_marginLeft="60dp"
        android:layout_alignBottom="@+id/edtUserDetails"/>

</RelativeLayout>

</RelativeLayout>